
#cd-edit
    form.cd-form
        .modal-top
            img(src='/css/logo.png' width='75' height='75' alt='logo')
            h1 IET
            h5 Interactive Education Tool
            button.close(type='button' aria-label='Close' style='color: #5E798B; outline: none;')
                span.cd-close-form(style='font-size: 40px; aria-hidden=') &times;
        div(style='padding-bottom: 10px')
            h3
                b(style="font-style: italic;")
                    | Edit Lesson
        .form-group
            select#edit-year.form-control(name='edit-year' style='box-shadow: none;border-radius:0px; background-color: transparent; outline: none; color: #5E798B;')
                option(value='' disabled='' selected='' style='background: white;') Select Year
                each item in years
                    option(style='background: white; color: black;' value=item.name)=item.name
        .form-group
            input#edit-name.form-control(name='edit-name' placeholder=' ' type='text' required='' style='box-shadow: none;border-radius:0px')
            label.input-form(for='edit-name') Lesson Name
        .form-group
            select#edit-teacher.form-control(name='edit-teacher' style='box-shadow: none;border-radius:0px; background-color: transparent; outline: none; color: #5E798B')
                option(value='' disabled='' selected='' style='background: white;') Select Teacher
                each item in teachers
                    option(style='background: white;' value=item.id)=item.name + " - " + item.id
        .form-group
            select#edit-class.form-control(name='edit-class' style='box-shadow: none;border-radius:0px; background-color: transparent; outline: none; color: #5E798B;')
                option(value='' disabled='' selected='' style='background: white;') Select Class
                each item in ["A1", "A2", "B1", "B2" , "C1", "C2", "D1", "D2" , "E1", "E2", "F1", "F2", "G1", "G2", "H1", "H2", "I1", "I2", "J1", "J2", "K1", "K2", "L1", "L2"]
                    option(style='background: white; color: black;' value=item)=item
        .form-group
            select#edit-day.form-control(name='edit-day' style='box-shadow: none;border-radius:0px; background-color: transparent; outline: none; color: #5E798B;')
                option(value='' disabled='' selected='' style='background: white;') Select Class
                each item in ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"]
                    option(style='background: white; color: black;' value=item.substring(0,3))=item
        .form-group
            input#edit-start.form-control(name='edit-start' required style='box-shadow: none;border-radius:0px; background-color: transparent; outline: none;')
            label.input-form(for='edit-start') Start Time
        .form-group
            input#edit-end.form-control(name='edit-end' required style='box-shadow: none;border-radius:0px; background-color: transparent; outline: none;')
            label.input-form(for='edit-end') End Time
        .cd_modal-footer
            button#submiteditlesson.btn.btfooter(type='submit') Edit